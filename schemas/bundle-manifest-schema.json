{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tavoai.com/schemas/bundle-manifest-v1.0.json",
  "title": "TavoAI Bundle Manifest Schema",
  "description": "JSON Schema for TavoAI rule bundle manifests",
  "type": "object",
  "required": [
    "id",
    "name",
    "description",
    "version",
    "artifact_type",
    "author",
    "artifacts"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^tavoai-[a-z0-9-]+[a-z0-9]$",
      "description": "Unique bundle identifier (e.g., 'tavoai-owasp-llm-top-10')"
    },
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 100,
      "description": "Human-readable bundle name"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "maxLength": 1000,
      "description": "Detailed bundle description"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., '1.0.0')"
    },
    "artifact_type": {
      "type": "string",
      "enum": ["code_rule", "proxy_rule", "zap_attack", "policy", "model_card"],
      "description": "Primary artifact type in this bundle"
    },
    "pricing_tier": {
      "type": "string",
      "enum": ["free", "paid", "enterprise"],
      "description": "Bundle pricing tier (affects distribution method)"
    },
    "author": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "Bundle author or organization"
    },
    "license": {
      "type": "string",
      "enum": ["MIT", "Apache-2.0", "Proprietary", "BSD-3-Clause"],
      "description": "Bundle license"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Bundle homepage URL"
    },
    "documentation": {
      "type": "string",
      "format": "uri",
      "description": "Documentation URL"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "Source repository URL"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9._/-]+\\.(yaml|json|rego|py)$"
      },
      "minItems": 1,
      "description": "List of artifact files in this bundle"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^tavoai-[a-z0-9-]+[a-z0-9]$"
      },
      "description": "Other bundle IDs this bundle depends on"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "description": "Searchable tags for bundle discovery"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["security", "compliance", "ethics", "infrastructure", "application", "ai-risk", "bias", "privacy"]
      },
      "description": "Bundle categories"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["python", "javascript", "typescript", "java", "go", "c", "cpp", "csharp", "ruby", "php", "rust", "scala"]
      },
      "description": "Programming languages supported by rules in this bundle"
    },
    "standards": {
      "type": "object",
      "description": "Standards compliance information",
      "properties": {
        "owasp_llm": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^LLM\\d{2}$"
          },
          "description": "OWASP LLM Top 10 categories covered"
        },
        "iso_42001": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
          },
          "description": "ISO 42001 sections covered"
        },
        "nist_ai_rmf": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[A-Z]+-\\d+\\.\\d+$"
          },
          "description": "NIST AI RMF functions covered"
        },
        "mit_ai_risk": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "MIT AI Risk categories covered"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional bundle metadata",
      "properties": {
        "rule_count": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of rules in this bundle"
        },
        "avg_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Average confidence score across rules"
        },
        "false_positive_rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Expected false positive rate"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Bundle creation timestamp"
        }
      }
    }
  }
}
